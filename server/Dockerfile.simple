FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Create a startup script
RUN echo '#!/bin/sh\n\
echo "Starting backend server on port $PORT"\n\
node server.js' > /start.sh && chmod +x /start.sh

# Expose port
EXPOSE $PORT

# Start the application
CMD ["/start.sh"]
